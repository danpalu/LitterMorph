---
import BigLogo from "./BigLogo.svelte";
---

<div
  class="bg-gradient-to-b from-tertiary-0 via-primary-0 via-30% to-secondary-500 flex flex-row justify-center"
>
  <div
    class="text-secondary-800 md:text-white flex flex-col justify-center items-center gap-20 h-screen md:flex-row md:max-w-5xl md:w-full"
  >
    <div class="mx-4">
      <h1
        class="text-3xl mb-8 border-b-2 border-tertiary-0 pb-2 md:pb-4 w-64 md:text-6xl md:w-[24rem] lg:text-8xl lg:w-[36rem] xl:text-9xl xl:w-[48rem] xl:pb-8 font-Nunito font-medium"
      >
        LitterMorph
      </h1>
      <h2
        class="text-lg -mt-4 md:text-xl lg:text-2xl xl:text-3xl font-Nunito font-medium"
      >
        Making the Best of the Rest
      </h2>
    </div>
    <BigLogo client:load />
  </div>
</div>
<div class="relative flex flex-row justify-center align-middle">
  <a href="#content" class="w-12 h-12 stroke-primary-0 absolute -top-20">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-12 h-12 stroke-primary-0 absolute animate-bounce"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5"></path>
    </svg>
  </a>
</div>
